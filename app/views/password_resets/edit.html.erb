<h3 class="text-center mt-5">パスワードリセット</h3>
<div class="container pb-5">
  <%= form_tag("/password_resets/#{params[:id]}", method: :patch)do %>
  <div class="form-wrapper">
      <input name="email"  class="ignore-form"  value="<%= @user.email %>">
    <div class="form-group">
      <p class="text-center">新しいパスワード</p>
      <input name="password" class="form-control"  type="password">
    </div>
    <div class="form-group">
      <p class="text-center">パスワード確認</p>
      <input name="password_confirmation" class="form-control"  type="password">
    </div>
    <input type="submit" class="btn btn-primary" value="パスワードをリセット">
    </div>
  <% end %>
</div>
