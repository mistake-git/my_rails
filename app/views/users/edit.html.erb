<h3 class="text-center mt-5">アカウント編集</h3>
<div class="container pb-5">
  <%= form_with scope: :user, url: users_update_path(@user), local: true ,method: :patch  do |form| %>
    <div class="form-group">
      <p>プロフィール画像選択</p>
      <%= form.file_field :image,class:"form-control"%>
    </div>
    <div class="form-group">
      <p>名前</p>
      <%= form.text_field :name, class:"form-control",value: @user.name%>
    </div>
    <div class="form-group">
      <p>メールアドレス
        <p>
          <%= form.text_field :email ,class:"form-control", value: @user.email%>
        </div>
        <div class="form-group">
          <p>自己紹介</p>
          <%= form.text_area :introduce ,class:"form-control", value: @user.introduce%>
        </div>
        <%= form.submit  value="保存" ,class:"btn btn-primary"%>
      <% end %>
      <% @user.errors.full_messages.each do |message| %>
        <div class="error-message">
          <%= message %>
        </div>
      <% end %>
    </div>
  
